<div class="page-header">
	<h1>ユーザー一覧</h1>
</div>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>名前</th>
      <th>権限</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.nm %></td>
        <td><%= KbnConstants::get_logical_name(user.user_kbn) %>
        <td><%= link_to '編集', edit_user_path(user) %></td>
        <td><%= link_to '削除', user, method: :delete, data: { confirm: '削除してもよろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規作成', new_user_path, class: 'btn btn-default' %>
