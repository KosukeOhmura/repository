<% url = @temp.new_record? ? project_temps_path(@project) : project_temp_path(@project, @temp) %>
<%= form_for(@temp, url: url, class: 'form-horizontal') do |f| %>
  <% if @temp.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@temp.errors.count, "error") %> prohibited this temp from being saved:</h2>

      <ul>
      <% @temp.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
		<label class="col-sm-2 control-label" for="kbn_logical_name">名前</label>
		<div class="col-sm-10">
      <%= f.text_field :nm, class: 'form-control', placeholder: '名前' %>
		</div>
	</div>

  <div class="form-group">
		<label class="col-sm-2 control-label" for="kbn_physical_name">雛形区分</label>
		<div class="col-sm-10">
      <%= f.select :temp_kbn, KbnConstants::get_select(KbnConstants::TEMP_KBN), {}, {class: 'form-control'} %>
		</div>
	</div>

  <div class="form-group">
		<label class="col-sm-2 control-label" for="kbn_code">内容</label>
		<div class="col-sm-10">
      <%= f.text_area :content, class: 'form-control', size: '40x40' %>
		</div>
	</div>

  <div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
      <%= f.submit '送信', class: 'btn btn-default' %>
		</div>
	</div>
<% end %>
