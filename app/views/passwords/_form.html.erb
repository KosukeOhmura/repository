      <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード' %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="user_password_confirmation">パスワード確認</label>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'パスワード確認' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit '送信', class: 'btn btn-default' %>
    </div>
	</div>
  
<% end %>

