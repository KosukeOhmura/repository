<div class="page-header">
	<h1>プロジェクト一覧</h1>
</div>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>論理名(管理者)</th>
      <th>物理名</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td>
          <%= link_to_if project.join_flag, 
            "#{project.logical_name}(#{project.admins})", 
            project_erds_path(project)
          %>
        </td>
        <td><%= project.physical_name %></td>
        <td><%= link_to_if project.admin_flag, '編集', edit_project_path(project) %></td>
        <td><%= link_to_if project.admin_flag, '削除', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規プロジェクト', new_project_path, class: 'btn btn-default' %>
