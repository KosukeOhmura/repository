<%= form_for(@model, class: 'form-horizontal') do |f| %>
  <% if @model.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@model.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @model.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
		<label class="col-sm-2 control-label" for="project_logical_name">名前</label>
		<div class="col-sm-10">
      <%= f.text_field :logical_name, class: 'form-control', placeholder: '名前' %>
		</div>
	</div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="project_users">参加者</label>
    <div class="col-sm-10">
      <table class="table table-hover table-striped">
        <tr>
          <th>参加</th>
          <th>管理</th>
          <th>メール</th>
        </tr>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= check_box_tag "project[join_user_id][]",
                user.id,
                @model.project_users.find {|pu| pu.user_id == user.id && pu.deleted_at.nil? } || user.id == current_user.id,
                {onclick: (user.id == current_user.id ? "return false;" : "")}
              %>
            </td>
            <td>
              <%= check_box_tag "project[admin_user_id][]",
                user.id,
                @model.project_users.find {|pu| pu.user_id == user.id && pu.deleted_at.nil? && pu.admin_flag } || user.id == current_user.id,
                {onclick: (user.id == current_user.id ? "return false;" : "")}
              %>
            </td>
            <td>
              <%= user.email %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>

  <div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
      <%= f.submit '送信', class: 'btn btn-default' %>
		</div>
	</div>

<% end %>
