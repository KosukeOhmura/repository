<% url = @err_property.new_record? ? project_err_err_properties_path(@project, @err) : project_err_err_property_path(@project, @err, @err_property) %>
<%= form_for(@err_property, url: url, class: 'form-horizontal') do |f| %>
  <% if @err.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@err.errors.count, "error") %> prohibited this err from being saved:</h2>

      <ul>
      <% @err.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
		<label class="col-sm-2 control-label" for="err_logical_name">論理名</label>
		<div class="col-sm-10">
      <%= f.text_field :logical_name, class: 'form-control', placeholder: '論理名' %>
		</div>
	</div>

  <div class="form-group">
		<label class="col-sm-2 control-label" for="err_physical_name">物理名</label>
		<div class="col-sm-10">
      <%= f.text_field :physical_name, class: 'form-control', placeholder: '物理名' %>
		</div>
	</div>

  <div class="form-group">
		<label class="col-sm-2 control-label" for="err_code">コード</label>
		<div class="col-sm-10">
      <%= f.text_field :code, class: 'form-control', placeholder: 'コード' %>
		</div>
	</div>

  <div class="form-group">
		<label class="col-sm-2 control-label" for="err_db_code">DBコード</label>
		<div class="col-sm-10">
      <%= f.text_field :db_code, class: 'form-control', placeholder: 'DBコード' %>
		</div>
	</div>

  <div class="form-group">
		<label class="col-sm-2 control-label" for="err_message_content">メッセージ</label>
		<div class="col-sm-10">
      <%= f.text_area :message_content, class: 'form-control' %>
		</div>
	</div>

  <div class="form-group">
		<label class="col-sm-2 control-label" for="err_message_content">警告</label>
		<div class="col-sm-10">
      <%= f.check_box :warning_flag, class: 'form-control' %>
		</div>
	</div>

  <div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
      <%= f.submit '送信', class: 'btn btn-default' %>
		</div>
	</div>
<% end %>

